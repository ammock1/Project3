<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocAlarm">

    <TextView
        android:id="@+id/locLabel"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/loc_alarms"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/locHours"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="221dp"
        android:layout_marginLeft="221dp"
        android:ems="10"
        android:hint="0"
        android:inputType="time"
        app:layout_constraintBaseline_toBaselineOf="@+id/locHoursLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/locMins"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="221dp"
        android:layout_marginLeft="221dp"
        android:ems="10"
        android:hint="2"
        android:inputType="time"
        app:layout_constraintBaseline_toBaselineOf="@+id/locMinsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/intLabel"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="@string/cur_int"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locHoursLabel"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="216dp"
        android:gravity="right|center_vertical"
        android:text="@string/hours"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locMinsLabel"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="260dp"
        android:gravity="right|center_vertical"
        android:text="@string/minutes"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>